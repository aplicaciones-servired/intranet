---
import { fade } from "astro:transitions";
import "../../styles/global.css";
import { AdminHeader } from "../components/AdminHeader";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../../public/intranet.png" />
    <link rel="icon" href="../../public/intranet.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Intranet - Panel de Administraci√≥n</title>
  </head>
  <body class="w-full h-full bg-gray-50">
    <div style="display: flex; min-height: 100vh;">
      {/* Sidebar */}
      <div style="flex-shrink: 0;">
        <AdminHeader client:load />
      </div>
      
      {/* Main Content Area */}
      <div style="flex: 1; display: flex; flex-direction: column; overflow: hidden;">
        {/* Top Bar */}
        <div class="bg-white shadow-sm border-b border-gray-200"></div>
        {/* Page Content */}
        <main class="flex-1 overflow-auto p-8 bg-gray-50">
          <slot transition:animate={fade({ duration: "0.4s" })} />
        </main>
      </div>
    </div>
  </body>
</html>
